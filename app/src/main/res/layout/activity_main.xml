<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_drawerlayout"
        tools:context="com.app.mymusic.ui.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_toolbar"></android.support.v7.widget.Toolbar>
            <com.app.mymusic.widget.SearchEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/mian_serch_edt"
                android:layout_below="@+id/main_toolbar"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/mian_serch_edt"
                android:layout_marginTop="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_all_tv"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:text="全部歌曲"
                        android:drawableTop="@drawable/all"
                        android:gravity="center"/>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/scan_tv"
                        android:text="本地列表"
                        android:drawableTop="@drawable/scan"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mian_download_tv"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:text="下载"
                        android:drawableTop="@drawable/download"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_test1"
                        android:drawableTop="@drawable/like"
                        android:gravity="center"
                        android:text="收藏"/>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/main_test2"
                        android:drawableTop="@drawable/recent_play"
                        android:gravity="center"
                        android:text="最近播放"/>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_test3"
                        android:layout_alignParentRight="true"
                        android:drawableTop="@drawable/online"
                        android:text="在线"
                        android:gravity="center"
                        android:layout_marginRight="8dp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <fragment
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:id="@+id/left_menu"
            android:name="com.app.mymusic.ui.MainMenuFragment"
            android:layout_gravity="left"
            />
    </android.support.v4.widget.DrawerLayout>

